<h1><%= @user.username %>'s Profile</h1>

<h2><%= @user.username %>'s Goals</h2>

<% if @user.username == current_user.username %>
  <%= link_to 'New Goal', new_goal_url %>
<% end %>

<% @user.goals.each do |goal| %>
  <%= render 'shared/goal_with_buttons', goal: goal %>
<% end %>

